{
  "manifest_version": 3,
  "name": "Save for Later",
  "version": "1.0",
  "description": "Save links for later viewing.",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icon.png",
      "48": "src/assets/icon.png",
      "128": "src/assets/icon.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/assets/manager.html"],
      "matches": ["<all_urls>"]
    }
  ]
}