{
  "manifest_version": 3,
  "name": "Save for Later",
  "version": "1.0",
  "description": "For the forgetful ones who always save videos to watch later... and never do. I got your back! Save links and set reminders to check them out later.",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
"icons": {
  "48": "src/assets/icon.png",
  "128": "src/assets/icon.png"
},
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}